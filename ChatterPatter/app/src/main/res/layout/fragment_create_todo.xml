<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:background="#ffffff"
    android:paddingRight="4dp"
    tools:context="com.example.saroshmadara.chatterpatter.ui.fragment.CreateTodoFragment">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/todoCancel"
            android:background="@drawable/loginbtnbg"
            android:layout_weight="1"
            android:paddingRight="4dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/todoCreate"
            android:background="@drawable/loginbtnbg"
            android:layout_weight="1"
            android:text="Create"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_marginTop="100dp"
        android:id="@+id/todoTitleEt"
        android:layout_centerInParent="true"
        android:textColor="#b85900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Todo title"
        />
    <LinearLayout
        android:id="@+id/tagAndDateHolder"
        android:layout_below="@id/todoTitleEt"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/todoTagEt"
            android:hint="Tag"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/todoDeadlineEt"
            android:hint="Deadline"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <EditText
        android:id="@+id/todoDescEt"
        android:layout_below="@id/tagAndDateHolder"
        android:hint="Write you tode description here."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>
