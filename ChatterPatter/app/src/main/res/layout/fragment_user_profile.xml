<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.saroshmadara.chatterpatter.ui.fragment.UserProfileFragment"
    >
    <TextView
        android:id="@+id/userNameTv"
        android:textSize="30dp"
        android:hint="User Name"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userNameTv"
        android:id="@+id/userEmailTv"
        android:hint="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/userFollowersTv"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userEmailTv"
        android:hint="Followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userFollowersTv"
        android:hint="Following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:src="@drawable/add_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
