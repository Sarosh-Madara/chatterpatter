<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/loginscreen"
    tools:context="com.example.saroshmadara.chatterpatter.ui.fragment.LoginFragment">

    <RelativeLayout
        android:id="@+id/rla"
        android:padding="6dp"
        android:background="@drawable/credentialsbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_user_demo"
            android:id="@+id/demoimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/signInEmailEt"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:hint="Email"
            style="?actionBarPopupTheme"
            android:textColorHint="#c4c5c6"
            android:textSize="21dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/demoimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:padding="4dp"
        android:paddingLeft="10dp"
        android:id="@+id/rl2"
        android:layout_below="@id/rla"
        android:background="@drawable/credentialsbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_password_demo"
            android:id="@+id/demoimage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/signInPasswordEt"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:hint="Password"
            style="?actionBarPopupTheme"
            android:textColorHint="#c4c5c6"
            android:textSize="21dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/demoimage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/loginButton"
        android:textSize="20dp"
        android:textStyle="normal"
        android:textColor="#fff9ffef"
        android:background="@drawable/loginbtnbg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Log in"
        android:layout_below="@id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="2dp"
        android:id="@+id/ortv"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/rla"
        android:text="or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:id="@+id/fbLayout"
        android:layout_above="@id/ortv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/loginFbButton"
            android:textColor="#fff9ffef"
            android:text="Sign in with Facebook"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signinfbbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<ImageView-->
        <!--android:paddingRight="90dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/fbicon"-->
        <!--/>-->
    </RelativeLayout>


    <TextView
        android:id="@+id/forgotPassTextView"
        android:text="I've forgotten my password"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/registerButton"
        android:textColor="#b85900"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:layout_above="@id/forgotPassTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
